generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Upload {
  id          String   @id @default(cuid())
  title       String
  description String?
  category    String
  language    String
  provider    String
  roles       String[]
  filePath    String
  createdAt   DateTime @default(now())
}